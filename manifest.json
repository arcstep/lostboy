{
  "manifest_version": 3,
  "name": "Web Content Recorder",
  "version": "1.0",
  "description": "Automatically records HTML content of the pages you visit.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}